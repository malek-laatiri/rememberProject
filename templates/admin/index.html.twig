{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        div.absolute {
            position: relative;
            top: 80px;
            left: 500px;

            width: 610px;
            border: 3px solid black;
        }

        div.side {
            position: relative;
            top: 80px;
            left: 150px;

            width: 300px;
            border: 3px solid black;
            height: 200px;

        }
    </style>

    <div class="example-wrapper">
        <a href="{{ path('fos_user_security_logout') }}">logout</a>

    </div>
    <div class="side">
        <table>
            <tr>
                <th><a href="{{ path('admin') }}">Users</a></th>
            </tr>
            <tr>
                <th><a href="{{ path('adminTasks') }}">Tasks</a></th>
            </tr>
        </table>

    </div>
    <div class="absolute">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Delete</th>

            </tr>
            </thead>
            <tbody>


            {% for user in users %}

                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>

                </tr>


            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

    <div class="row">
        <a href="{{ path('fos_user_security_logout') }}">logout</a>

    </div>
        <div class="row">
            <table>
                <tr>
                    <th><a href="{{ path('admin') }}">Users</a>
                        &nbsp
                        <a href="{{ path('adminTasks') }}">Tasks</a></th>
                </tr>

            </table>
        </div>

    <div class="row">
        <table class="table">

            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ include('user/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
</div>
</div>


{% endblock %}

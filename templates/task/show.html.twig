{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="row">

                <h1>Task</h1>
            </div>
            <div class="row">

                <table class="table">

                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ task.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ task.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ task.description }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ task.date ? task.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Starthour</th>
                        <td>{{ task.starthour ? task.starthour|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Endhour</th>
                        <td>{{ task.endhour ? task.endhour|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                        <td>{{ task.createdat ? task.createdat|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>

                    </tbody>
                </table>
            </div>
            <table>

                <th>
                    <button type="button" class="btn "><a href="{{ path('adminTasks') }}">back to list</a></button>
                </th>
                &nbsp
                <th>
                    <button type="button" class="btn "><a href="{{ path('task_edit', {'id': task.id}) }}">edit</a></button>
                </th>

                &nbsp
                <th id="l">{{ include('task/_delete_form.html.twig') }}</th>
                </td>

                </tr>
            </table>
        </div>
    </div>
{% endblock %}

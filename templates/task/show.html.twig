{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ task.date ? task.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Starthour</th>
                <td>{{ task.starthour ? task.starthour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Endhour</th>
                <td>{{ task.endhour ? task.endhour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ task.createdat ? task.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}

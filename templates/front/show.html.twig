{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="row">

                <h1>{% trans %}Task{% endtrans %}</h1>
            </div>
            <div class="row">

                <table class="table">

                    <tbody>

                    <tr>
                        <th>{% trans %}Title{% endtrans %}</th>
                        <td>{{ task.title }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Description{% endtrans %}</th>
                        <td>{{ task.description }}</td>
                    </tr>

                    <tr>
                        <th>{% trans %}Start hour{% endtrans %}</th>
                        <td>{{ task.starthour ? task.starthour|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}End hour{% endtrans %}</th>
                        <td>{{ task.endhour ? task.endhour|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Created at{% endtrans %}</th>
                        <td>{{ task.createdat ? task.createdat|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>

                    </tbody>
                </table>
            </div>
            <table>





                {% for i in selectprime %}

                {% if i.task.id == task.id and i.isCreator %}
                <th>
                    <button type="button" class="btn "><a href="{{ path('user_front_edit', {'id': task.id}) }}">{% trans %}edit{% endtrans %}</a></button>
                </th>
                    &nbsp
                    <th id="l">{{ include('task/_delete_form.html.twig') }}</th>
                    </td>

                    </tr>
                {% endif %}
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock %}
